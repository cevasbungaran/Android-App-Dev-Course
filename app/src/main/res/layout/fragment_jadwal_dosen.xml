<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_jadwal_dosen_title"
        android:id="@+id/tv_title_jadwal_dosen"
        android:textSize="@dimen/size_title"
        android:textColor="@color/birutuaIF"
        android:layout_margin="@dimen/margin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_jadwal_dosen"
        android:id="@+id/btn_nama_dosen"
        android:backgroundTint="@color/biruIF"
        android:text="Dropdown dosen"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lst_pramatkul"
        android:layout_below="@+id/btn_nama_dosen"
        android:layout_above="@+id/btn_kembali"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:id="@+id/btn_kembali"
        android:backgroundTint="@color/biruIF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>