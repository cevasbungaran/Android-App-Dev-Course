<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_pertemuan_title"
        android:id="@+id/tv_title_pertemuan"
        android:textSize="@dimen/size_title"
        android:textColor="@color/birutuaIF"
        android:layout_margin="@dimen/margin"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lst_pertemuan"
        android:layout_below="@+id/tv_title_pertemuan"
        android:layout_above="@id/btn_tambah_pertemuan"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tambah_pertemuan"
        android:backgroundTint="@color/biruIF"
        android:text="@string/btn_tambah_pertemuan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>